<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to CommonBlog!</h1>
            <p>Alpha version</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/blogs/new">Add a new Post.</a>
            </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12"></div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% blogs.forEach(function(blog){ %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= blog.image %>">
                    <div class="caption">
                        <h4><%= blog.name %></h4> 
                        <p>
                            <%= blog.content.substring(0, 100) %>...
                            <span><em><strong>by: <%= blog.author.username%></strong></em></span>
                        </p>
                    </div>
                    <p>
                        <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read more...</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>    
    
<% include ../partials/footer.ejs %>